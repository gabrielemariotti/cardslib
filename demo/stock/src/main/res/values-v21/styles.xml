<resources>


    <style name="Theme" parent="FrameworkRoot.Theme" /> <!-- doesn't contain the pre-L code from the values/styles.xml -->

    <style name="Theme.Carddemo" parent="Theme.Carddemo.Base">

        <item name="popupItemBackground">@drawable/popup_item_background</item>
        <item name="android:alertDialogTheme">@style/Theme.Carddemo.AlertDialog</item>

        <item name="android:statusBarColor">@color/demo_colorPrimaryDark</item>
    </style>

    <style name="Theme.Carddemo.WithNavDrawer" parent="Theme.Carddemo">
        <item name="android:statusBarColor">@color/demo_colorPrimaryDark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="subheader">
        <item name="android:elevation">@dimen/headerbar_elevation</item>
    </style>

    <style name="Theme.Carddemo.AlertDialog" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/demo_primary_color</item>
        <item name="android:colorPrimaryDark">@color/demo_colorPrimaryDark</item>
        <item name="android:colorAccent">@color/theme_accent_1</item>
    </style>


</resources>
