<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/firstContent"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_marginLeft="3dp"
              android:layout_marginRight="3dp"
              android:minHeight="210dp"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/carddemo_googlenow_main_inner_lastupdate"
        style="@style/carddemo_googlenow_main_inner_lastupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <it.gmariotti.cardslib.demo.stock.StockListLayout
        android:id="@+id/carddemo_googlenow_main_inner_list"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/card_header_simple_title_margin_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>

